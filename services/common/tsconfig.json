{
  "compilerOptions": {
    "declaration": true,
    "module": "NodeNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": false,
    "lib": ["ES2022", "dom", "dom.iterable"],
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
