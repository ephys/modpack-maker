{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "main": "dist/api/src/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "start:dev": "concurrently npm:start:dev:app npm:start:dev:db",
    "start:dev:db": "docker-compose up",
    "start:dev:app": "npm run build && concurrently \"NODE_ENV=development nodemon .\" \"npm run build:watch\"",
    "start:prod": "NODE_ENV=production node .",
    "lint": "eslint \"./src/**/*.ts\" --fix",
    "test": "jest",
    "test:typing": "tsc --noEmit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@ephys/modpack-maker-common": "^1.0.0",
    "@apollo/server": "^4.6.0",
    "@ephys/fox-forge": "^1.4.0",
    "@ephys/sequelize-cursor-pagination": "^7.0.0-alpha.25",
    "@iarna/toml": "^2.2.5",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/platform-express": "^9.4.0",
    "@nestjs/schedule": "^2.2.1",
    "@sequelize/core": "^7.0.0-alpha.25",
    "autolinker": "^4.0.0",
    "bull": "^4.10.4",
    "cheerio": "^1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "core-js": "^3.30.0",
    "dataloader": "^2.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucene": "^2.1.1",
    "nanoid": "^4.0.2",
    "node-fetch": "^3.3.1",
    "pg": "^8.10.0",
    "puppeteer": "^19.8.5",
    "reflect-metadata": "^0.1.13",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-highlight": "^6.0.0",
    "rehype-preset-minify": "^6.0.0",
    "rehype-raw": "^6.1.0",
    "rehype-stringify": "^9.0.2",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^10.0.0",
    "retry-as-promised": "^7.0.4",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "semver": "^7.3.8",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "@ephys/eslint-config-typescript": "^19.0.2",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/lucene": "^2.1.3",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^3.0.3",
    "@types/supertest": "^2.0.11",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.3.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
